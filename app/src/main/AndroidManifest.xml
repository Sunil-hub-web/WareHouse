<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.warehouse">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WareHouse"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.AddressDetails"
            android:label="@string/app_name"
            android:theme="@style/Theme.WareHouse.NoActionBar"></activity>
        <activity
            android:name=".activity.ForgotPassword"
            android:theme="@style/Theme.WareHouse.NoActionBar"></activity>
        <activity
            android:name=".activity.ViewUserDetails"
            android:theme="@style/Theme.WareHouse.NoActionBar"></activity>
        <activity
            android:name=".activity.ChangePassword"
            android:theme="@style/Theme.WareHouse.NoActionBar" />
        <activity
            android:name=".activity.VerificationOtp"
            android:theme="@style/Theme.WareHouse.NoActionBar" />
        <activity
            android:name=".activity.UserLoginPage"
            android:theme="@style/Theme.WareHouse.NoActionBar">

        </activity>
        <activity
            android:name=".activity.UserSignUpPage"
            android:theme="@style/Theme.WareHouse.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.WareHouse.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/api_key" />

    </application>

</manifest>