<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatbot_back">

    <include
        android:id="@+id/include"
        layout="@layout/home_home"
        android:layout_alignParentTop="true"
        android:layout_height="40dp"
        android:layout_width="match_parent"></include>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/include">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/cart_image_width"
            android:layout_height="@dimen/cart_image_height"
            android:layout_marginLeft="10dp"
            android:src="@drawable/rectangle66">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Product"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dalivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery : "
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="17dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On-road"
                    android:textColor="#0A22A1"
                    android:layout_marginTop="5dp"
                    android:textSize="17dp"
                   android:layout_toRightOf="@id/dalivery"
                    android:textStyle="bold"></TextView>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp">
                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1x"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="17dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹ 45.00"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    android:textSize="17dp"
                    android:layout_toRightOf="@id/quantity"
                    android:textStyle="bold"></TextView>
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textColor="#0A22A1"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"></TextView>

    </RelativeLayout>


    <Button
        android:id="@+id/contactus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_back"
        android:layout_alignParentBottom="true"
        android:text="Contact Us"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textStyle="bold"></Button>

</RelativeLayout>