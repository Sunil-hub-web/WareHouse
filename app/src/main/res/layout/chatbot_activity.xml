<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatbot_back">


        <RelativeLayout
            android:id="@+id/r3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We are here to help"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/t1"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please select the mode of communication"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/t2"
                android:layout_marginLeft="15dp"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/payment_card_height"
            android:layout_below="@+id/r3"
            android:layout_margin="25dp"
            android:elevation="15dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="@dimen/chat_image_width"
                android:layout_height="@dimen/chat_image_height"
                android:src="@drawable/user"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"></ImageView>
            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAQ"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img1"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Related Order, Delivery &amp; Payment"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img1"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/t4"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chatAdhmin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/payment_card_height"
            android:layout_below="@+id/r4"
            android:layout_margin="25dp"
            android:elevation="15dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="@dimen/chat_image_width"
                android:layout_height="@dimen/chat_image_height"
                android:src="@drawable/user"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"></ImageView>
            <TextView
                android:id="@+id/t6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat with Admin"
                android:textColor="@color/black"
                android:textSize="23dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img2"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/t7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat with our admin"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_toRightOf="@+id/img2"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/t6"></TextView>

        </RelativeLayout>

    </RelativeLayout>
