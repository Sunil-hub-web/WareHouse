<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatbot_back">

        <include
            android:id="@+id/include"
            layout="@layout/home_home"
            android:layout_alignParentTop="true"
            android:layout_height="@dimen/forty"
            android:layout_width="match_parent"></include>

        <RelativeLayout
            android:id="@+id/cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty"
            android:layout_below="@id/include">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="@dimen/hundred_twenty"
                android:layout_height="@dimen/hundred_twenty"
                android:layout_marginLeft="@dimen/ten"
                android:src="@drawable/rectangle66">

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/productImage"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Product"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/twenty"
                    android:textStyle="bold"></TextView>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/dalivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery : "
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/seventeen"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="On-road"
                        android:textColor="#0A22A1"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/seventeen"
                        android:layout_toRightOf="@id/dalivery"
                        android:textStyle="bold"></TextView>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/eighteen">
                    <TextView
                        android:id="@+id/quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1x"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/seventeen"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹ 45.00"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="@dimen/forty"
                        android:textSize="@dimen/seventeen"
                        android:layout_toRightOf="@id/quantity"
                        android:textStyle="bold"></TextView>
                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/delete"
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:layout_marginRight="@dimen/fifteen"
                android:src="@drawable/trashsimple"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"></ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rel1"
            android:layout_marginBottom="@dimen/twenty">
            <TextView
                android:id="@+id/invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invoice "
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_margin="@dimen/fifteen"
                android:textSize="@dimen/twenty_five"
                android:textStyle="bold"></TextView>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/invoice"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginRight="4dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/r5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_marginRight="@dimen/fifteen">
                <TextView
                    android:id="@+id/productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twenty"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:id="@+id/quantity1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:text="1x"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twenty"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/productName"></TextView>
                <TextView
                    android:id="@+id/price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹ 45.00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twenty"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"></TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/r6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/r5"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_marginRight="@dimen/fifteen"
                android:layout_marginTop="@dimen/fifteen">
                <TextView
                    android:id="@+id/tax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tax"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twenty"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹ 4.00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twenty"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"></TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/r7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/r6"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_marginRight="@dimen/fifteen"
                android:layout_marginTop="@dimen/fifteen">
                <TextView
                    android:id="@+id/shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipping"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twenty"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/price3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹ 1.00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fifteen"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"></TextView>
            </RelativeLayout>
            <TextView
                android:id="@+id/apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply "
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginLeft="@dimen/fifteen"
                android:textSize="@dimen/twenty_five"
                android:layout_below="@+id/r7"
                android:textStyle="bold"></TextView>
            <RelativeLayout
                android:id="@+id/r8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/apply"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_marginRight="@dimen/fifteen"
                android:layout_marginTop="@dimen/fifteen">
                <TextView
                    android:id="@+id/coupanCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type Coupan Code"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twenty"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/t12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    android:textColor="#0A22A1"
                    android:textSize="@dimen/twenty"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"></TextView>
            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/r8"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginRight="4dp"
                android:background="#000000" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ninety"
            android:background="@drawable/cartbutton_back"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/fifty">
                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twenty_five"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹50.00"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    ></TextView>
            </LinearLayout>

            <Button
                android:id="@+id/checkOut"
                android:layout_width="@dimen/hundred_fifty"
                android:layout_height="@dimen/sixty"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/fifteen"
                android:background="@drawable/button_back"
                android:text="Checkout"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textStyle="bold"></Button>

        </RelativeLayout>
    </RelativeLayout>
