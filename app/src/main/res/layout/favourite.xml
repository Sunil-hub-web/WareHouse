<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="@dimen/eighty"
            android:layout_height="@dimen/eighty"
            android:layout_marginLeft="@dimen/ten"
            android:src="@drawable/rectangle66">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/productImage"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/five">

            <TextView
                android:id="@+id/product_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Product"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/edittextsize"
                android:textStyle="bold"></TextView>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five">

                <TextView
                    android:id="@+id/reating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="@dimen/five"
                    android:textSize="@dimen/seventeen"
                    android:textStyle="bold"></TextView>

              <!--  <TextView
                    android:id="@+id/quantity_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/quantity"
                    android:text="x"
                    android:textColor="@color/black"
                    android:textSize="@dimen/seventeen"
                    android:textStyle="bold"></TextView>-->

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45.00"
                    android:layout_marginLeft="@dimen/ten"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/seventeen"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/symbol"></TextView>

                <TextView
                    android:id="@+id/symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/seventeen"
                    android:layout_marginLeft="@dimen/fifty"
                    android:textStyle="bold"></TextView>
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/thirty"
            android:layout_height="@dimen/thirty"
            android:src="@drawable/trashsimple"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginRight="@dimen/twenty"></ImageView>

    </RelativeLayout>

</RelativeLayout>